# Database Configuration (MariaDB) 
database_url=mariadb+mariadbconnector://salad_user:YOUR_DB_PASSWORD@127.0.0.1:3306/saladoverflow
test_database_url=mariadb+mariadbconnector://salad_user:YOUR_DB_PASSWORD@127.0.0.1:3306/saladoverflow_test

# MariaDB Configuration (for docker-compose.yml)
MYSQL_ROOT_PASSWORD=YOUR_ROOT_PASSWORD
MYSQL_PASSWORD=YOUR_DB_PASSWORD

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
API_VERSION=v1
APP_NAME=SaladOverflow API

# CORS Settings
ALLOWED_ORIGINS=["https://overflow.saladsync.ca","http://overflow.saladsync.ca"]

# Email Configuration - Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_EMAIL@gmail.com
SMTP_PASSWORD=YOUR_APP_PASSWORD #your app password here
SMTP_FROM_EMAIL=YOUR_FROM_EMAIL@domain.com
SMTP_FROM_NAME=SaladOverflow Team
SMTP_USE_TLS=true

# Frontend URL for email links
FRONTEND_URL=https://overflow.saladsync.ca

# Backend URL for image URLs
BACKEND_URL=https://overflow.saladsync.ca

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET
GITHUB_REDIRECT_URI=https://overflow.saladsync.ca/api/v1/auth/github/callback
